{
  "family": "lexiflowtd",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::961341542746:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "8192",
  "containerDefinitions": [
    {
      "name": "lexiflowtd-container",
      "image": "961341542746.dkr.ecr.ap-southeast-2.amazonaws.com/lexiflow",
      "cpu": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
          "name": "lexiflowtd-container-8080-tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [
        {
          "name": "ENV",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:961341542746:secret:lexiflow_secrets-oyJvDE:OPENAI_API_KEY"
        },
        {
          "name": "LLM_PROVIDER",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:961341542746:secret:lexiflow_secrets-oyJvDE:LLM_PROVIDER"
        },
        {
          "name": "EMBEDDING_PROVIDER",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-2:961341542746:secret:lexiflow_secrets-oyJvDE:EMBEDDING_PROVIDER"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lexiflowtd",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
